<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/itemFilm">

    <TextView
        android:id="@+id/itemFilmName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default name"
        android:textSize="10pt"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/itemFilmDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nearest session:"
        app:layout_constraintStart_toStartOf="@id/itemFilmName"
        app:layout_constraintTop_toBottomOf="@id/itemFilmName"
        />

    <TextView
        android:id="@+id/itemFilmDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="1970.01.01"
        app:layout_constraintBottom_toBottomOf="@+id/itemFilmDateText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itemFilmDateText" />

    <TextView
        android:id="@+id/itemFilmID"
        android:layout_width="0px"
        android:layout_height="0px"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>