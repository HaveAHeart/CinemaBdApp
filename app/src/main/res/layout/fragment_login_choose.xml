<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verGLLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verGLRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horGLTextTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horGLTextBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horGLButtonTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horGLButtonMid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horGLButtonBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Hello! Who are you?"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/horGLTextBot"
        app:layout_constraintEnd_toStartOf="@+id/verGLRight"
        app:layout_constraintStart_toStartOf="@+id/verGLLeft"
        app:layout_constraintTop_toTopOf="@+id/horGLTextTop"
         />

    <Button
        android:id="@+id/buttonUser"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="User"
        app:layout_constraintBottom_toTopOf="@+id/horGLButtonMid"
        app:layout_constraintEnd_toStartOf="@+id/verGLRight"
        app:layout_constraintStart_toStartOf="@+id/verGLLeft"
        app:layout_constraintTop_toTopOf="@+id/horGLButtonTop" />

    <Button
        android:id="@+id/buttonAdmin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Admin"
        app:layout_constraintBottom_toTopOf="@+id/horGLButtonBot"
        app:layout_constraintEnd_toStartOf="@+id/verGLRight"
        app:layout_constraintStart_toStartOf="@+id/verGLLeft"
        app:layout_constraintTop_toTopOf="@+id/horGLButtonMid" />
</androidx.constraintlayout.widget.ConstraintLayout>